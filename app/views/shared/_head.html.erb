<head>
  <title><%= yield :title %></title>
  <link rel="shortcut icon" href="/favicon.ico"/>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8"/>
  <title>Products: <%= controller.action_name %></title>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'reset' %>
  <%= stylesheet_link_tag 'style' %>
  <%= stylesheet_link_tag 'blue' %>
  <%= "<!--[if lt IE 8]>#{stylesheet_link_tag 'ie7'}<![endif]-->" if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>
  <%= javascript_include_tag 'jquery-1.4.2.min' %>
  <%= javascript_include_tag 'cufon-yui' %>
  <%= javascript_include_tag 'nevis' %>
  <script type="text/javascript">
      $(document).ready(function() {
          Cufon.replace("h1, h2, h3");
      });
  </script>
  <%= javascript_include_tag 'jcarousellite_1.0.1.min' %>
  <%= javascript_include_tag 'jquery.easing' %>
  <script type="text/javascript">
      $(function() {
          $(".slideshow").jCarouselLite({
              btnNext: ".next",
              btnPrev: ".prev",
              visible: 1,
              vertical: false,
              auto: 5000,
              speed: 1250,
              easing: "easeInBack"
          });
          $(".quotations").jCarouselLite({
              visible: 1,
              vertical: true,
              auto: 3000,
              speed: 500,
              easing: "swing"
          });
      });
  </script>
  <%= yield :libraries %>
  <%= yield :head %>
</head>
